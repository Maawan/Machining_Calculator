<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unitsTextView"
                android:text="Units :"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metric"
                android:textSize="25sp"
                android:textColor="#00897B"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/metricTextView"
                android:layout_below="@+id/unitsTextView"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_below="@+id/unitsTextView"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/metricRadioButton"

                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inch"
                android:textSize="25sp"
                android:textColor="#00897B"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/inchTextView"
                android:layout_below="@+id/metricTextView"/>
            <RadioButton
                android:layout_width="wrap_content"

                android:layout_below="@+id/metricRadioButton"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/inchRadioButton"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/angleTextView"
                android:text="Angle Types :"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entering Angle"
                android:textSize="25sp"
                android:textColor="#00897B"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/enteringAngleTextView"
                android:layout_below="@+id/angleTextView"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_below="@+id/angleTextView"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/enteringRadioButton"

                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lead Angle"
                android:textSize="25sp"
                android:textColor="#00897B"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/leadAngleTextView"
                android:layout_below="@+id/enteringAngleTextView"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:id="@+id/leadRadioButton"
                android:layout_below="@+id/enteringAngleTextView"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"

                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>