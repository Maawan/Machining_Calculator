<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_height="200dp"
        android:id="@+id/logoCard"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        app:cardElevation="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:layout_margin="20dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Machining Calculator"
        android:layout_below="@+id/logoCard"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:id="@+id/title"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Version : 1.0"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:id="@+id/version"
        android:textStyle="italic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:text="A Machining Calculator App that was developed by a Mechanical Engineer Student. This was to complete a final year Project undertaken for a University"
        android:layout_below="@+id/version"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/descrition"
        android:textStyle="italic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:id="@+id/mail"
        android:layout_below="@+id/descrition"
        android:text="Contact Us : support@waqazystudios.com"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/mail"

        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:id="@+id/shareApp"
            android:layout_margin="10dp"
            android:elevation="5dp"
            app:cardElevation="5dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sharing"
                android:layout_margin="5dp"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            app:contentPaddingRight="5dp"
            android:elevation="5dp"
            app:cardElevation="5dp"
            android:layout_weight="1"
            android:id="@+id/rateUs"
            android:layout_margin="10dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/star"
                android:layout_margin="5dp"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:elevation="5dp"
            app:cardElevation="5dp"
            android:id="@+id/gmail"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gmail"
                android:layout_margin="5dp"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>